<div class="mt-4">
  <div class="row">
    {{#each blogs}}
    <div class="col-sm-6 col-lg-4">
      <a class="blog blog-post" href="/blogs/{{this.slug}}">
        <div class="card" style="width: 18rem;">
          <img src="{{this.image}}" class="card-img-top" alt="">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="/blogs/{{this.slug}}" class="btn btn-primary">詳細はこちら</a>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>